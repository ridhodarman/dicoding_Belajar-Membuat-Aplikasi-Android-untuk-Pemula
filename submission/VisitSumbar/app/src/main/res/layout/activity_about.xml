<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    android:gravity="bottom"
    tools:context=".AboutActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_photo_profile"
        android:layout_width="103dp"
        android:layout_height="115dp"
        android:layout_centerHorizontal="true"
        android:foregroundGravity="center"
        android:padding="2dp"
        android:src="@drawable/img0" />

    <TextView
        android:id="@+id/nama_saya"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_photo_profile"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:text='@string/nama_saya'
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nama_saya"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:text='@string/email'
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_centerInParent="true"
        android:fontFamily="@font/arizonia"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ket"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nama"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:text='@string/ket'
        android:textColor="@color/black"
        android:textSize="16sp" />

</RelativeLayout>
